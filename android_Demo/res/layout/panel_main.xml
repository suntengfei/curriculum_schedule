<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:panel="http://schemas.android.com/apk/res/com.android.demo"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/road_sight"
>
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:paddingLeft="37dip"
		android:paddingRight="37dip"
	>
		<com.android.demo.widget.Panel
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:id="@+id/topPanel" 
		    android:paddingBottom="4dip"
		    panel:handle="@+id/panelHandle"
		    panel:content="@+id/panelContent"
		    panel:position="top"
		    panel:animationDuration="1000"
		    panel:linearFlying="true"
		    panel:openedHandle="@drawable/top_switcher_expanded_background"
		    panel:closedHandle="@drawable/top_switcher_collapsed_background"
		    
		>
			<Button
				android:id="@+id/panelHandle" 
			    android:layout_width="fill_parent" 
			    android:layout_height="33dip" 
			/>
			<LinearLayout
				android:id="@+id/panelContent" 
			    android:orientation="vertical"
	    		android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
			>
				<TextView
				    android:layout_width="fill_parent" 
				    android:layout_height="wrap_content" 
				    android:gravity="center"
				    android:text=" 先生的 \n 课程表 "
				    android:textSize="16dip"
				    android:padding="4dip"
				    android:textColor="#eee"
				    android:textStyle="bold"
				    android:background="#323299"
				/>
			</LinearLayout>
		</com.android.demo.widget.Panel>
		<TextView
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:layout_weight="1"
		    android:gravity="center"
		    android:textSize="16dip"
		    android:padding="4dip"
		    android:textColor="#ddd"
		    android:text="time waits for no one"
		/>
		<com.android.demo.widget.Panel
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:id="@+id/bottomPanel"
		    android:paddingTop="4dip"
		    panel:handle="@+id/panelHandle"
		    panel:content="@+id/panelContent"
		    panel:position="bottom"
		    panel:animationDuration="1200"
		    panel:openedHandle="@drawable/bottom_switcher_expanded_background"
		    panel:closedHandle="@drawable/bottom_switcher_collapsed_background"
		>
			<Button
				android:id="@+id/panelHandle" 
			    android:layout_width="fill_parent" 
			    android:layout_height="33dip" 
			/>
			<LinearLayout
				android:id="@+id/panelContent" 
			    android:orientation="vertical"
	    		android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity="center"
	    		android:background="#993333"
			>
				<TextView
				    android:layout_width="fill_parent" 
				    android:layout_height="wrap_content" 
				    android:gravity="center"
				    android:text="选项"
				    android:textSize="16dip"
				    android:padding="4dip"
				    android:textColor="#eee"
				    android:textStyle="bold"
				    android:background="#993333"
				/>
				<Button 
				    android:id="@+id/addlessonbtn" 
			   		android:layout_width="fill_parent" 
			    	android:layout_height="33dip"
			    	android:text="添加课程 "/>
			</LinearLayout>
		</com.android.demo.widget.Panel>
	</LinearLayout>	
	<com.android.demo.widget.Panel
	    android:layout_width="wrap_content" 
	    android:layout_height="fill_parent" 
	    android:id="@+id/leftPanel"
	    android:layout_gravity="left"
	    panel:handle="@+id/panelHandle"
	    panel:content="@+id/panelContent"
	    panel:position="left"
	    panel:animationDuration="666"
	    panel:openedHandle="@drawable/left_switcher_expanded_background"
	    panel:closedHandle="@drawable/left_switcher_collapsed_background"
	>
		<!--
			maybe instead of specifying android:layout_gravity and/or
			optional android:layout_margin* we should introduce top/left
			padding?
			
			e.g. instead of
		    android:layout_gravity="center"
			android:layout_marginTop="-110dip"
			
			we could write:
			panel:handlePosition="center:-110dip"
		-->
		<Button
			android:id="@+id/panelHandle" 
		    android:layout_width="33dip" 
		    android:layout_height="wrap_content"
		    android:layout_gravity="top"
		    android:layout_marginTop="80dip"
		/>
		<LinearLayout
				android:id="@+id/panelContent" 
			    android:orientation="vertical"
	    		android:layout_width="200dip"
	    		android:layout_height="fill_parent"
			>
				<TextView
				    android:layout_width="fill_parent" 
				    android:layout_height="wrap_content" 
				    android:gravity="center"
				    android:text="  周一    "
				    android:textSize="16dip"
				    android:padding="4dip"
				    android:textColor="#eee"
				    android:textStyle="bold"
				    android:background="#993333"
				/>
				<ListView 	android:id="@+id/list1" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:drawSelectorOnTop="false" 
					android:scrollbars="vertical"
					android:background="#FFFFFF"
				/>
				<TextView
				    android:layout_width="fill_parent" 
				    android:layout_height="fill_parent" 
				    android:background="#993333"
				/>
			</LinearLayout>
	</com.android.demo.widget.Panel>
	
	<com.android.demo.widget.Panel
	    android:layout_width="wrap_content" 
	    android:layout_height="fill_parent"
	    android:id="@+id/leftPanel2"
	    android:layout_gravity="left"
	    panel:handle="@+id/panelHandle"
	    panel:content="@+id/panelContent"
	    panel:position="left"
	    panel:animationDuration="666"
	    panel:openedHandle="@drawable/left_switcher_expanded_background"
	    panel:closedHandle="@drawable/left_switcher_collapsed_background"
	    panel:linearFlying="true"
	>
		<!--
			maybe instead of specifying android:layout_gravity and/or
			optional android:layout_margin* we should introduce top/left
			padding?
			
			e.g. instead of
		    android:layout_gravity="center"
			android:layout_marginTop="-110dip"
			
			we could write:
			panel:handlePosition="center:-110dip"
		-->
		<Button
			android:id="@+id/panelHandle" 
		    android:layout_width="33dip" 
		    android:layout_height="wrap_content"
		    android:layout_gravity="bottom"
		    android:layout_marginBottom="80dip"
		/>
		<LinearLayout
				android:id="@+id/panelContent" 
			    android:orientation="vertical"
	    		android:layout_width="200dip"
	    		android:layout_height="fill_parent"
			>
				<TextView
				    android:layout_width="fill_parent" 
				    android:layout_height="wrap_content" 
				    android:gravity="center"
				    android:text="  周二   "
				    android:textSize="16dip"
				    android:padding="4dip"
				    android:textColor="#eee"
				    android:textStyle="bold"
				    android:background="#993333"
				/>
				<ListView 	android:id="@+id/list2" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:drawSelectorOnTop="false" 
					android:scrollbars="vertical"
					android:background="#FFFFFF"
				/>
				<TextView
				    android:layout_width="fill_parent" 
				    android:layout_height="fill_parent" 
				    android:background="#993333"
				/>
			</LinearLayout>
	</com.android.demo.widget.Panel>
	
	<com.android.demo.widget.Panel
	    android:layout_width="wrap_content" 
	    android:layout_height="fill_parent" 
	    android:id="@+id/rightPanel"
	    android:layout_gravity="right"
	    panel:handle="@+id/panelHandle"
	    panel:content="@+id/panelContent"
	    panel:position="right"
	    panel:animationDuration="1000"
	    panel:openedHandle="@drawable/right_switcher_expanded_background"
	    panel:closedHandle="@drawable/right_switcher_collapsed_background"
	    panel:weight="75%p"
	>
		<!--
			maybe instead of specifying android:layout_gravity and/or
			optional android:layout_margin* we should introduce top/left
			padding?
			
			e.g. instead of
		    android:layout_gravity="center"
			android:layout_marginTop="-110dip"
			
			we could write:
			panel:handlePosition="center:-110dip"
		-->
		<Button
			android:id="@+id/panelHandle" 
		    android:layout_width="33dip" 
		    android:layout_height="wrap_content"
		    android:layout_gravity="top"
		    android:layout_marginTop="20dip"
		/>
		<LinearLayout
				android:id="@+id/panelContent" 
			    android:orientation="vertical"
	    		android:layout_width="fill_parent"
	    		android:layout_height="fill_parent"
			>
				<TextView
				    android:layout_width="fill_parent" 
				    android:layout_height="wrap_content" 
				    android:gravity="center"
				    android:text="  周三    "
				    android:textSize="16dip"
				    android:padding="4dip"
				    android:textColor="#eee"
				    android:textStyle="bold"
				    android:background="#993333"
				/>
				<ListView 	android:id="@+id/list3" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:drawSelectorOnTop="false" 
					android:scrollbars="vertical"
					android:background="#FFFFFF"
				/>
				<TextView
				    android:layout_width="fill_parent" 
				    android:layout_height="fill_parent" 
				    android:background="#993333"
				/>
			</LinearLayout>
	</com.android.demo.widget.Panel>
	<com.android.demo.widget.Panel
	    android:layout_width="wrap_content" 
	    android:layout_height="fill_parent"
	    android:id="@+id/rightPanel2"
	    android:layout_gravity="right"
	    panel:handle="@+id/panelHandle"
	    panel:content="@+id/panelContent"
	    panel:position="right"
	    panel:animationDuration="666"
	    panel:openedHandle="@drawable/right_switcher_expanded_background"
	    panel:closedHandle="@drawable/right_switcher_collapsed_background"
	    panel:weight="75%p"
	    panel:linearFlying="true"
	>
		<Button
			android:id="@+id/panelHandle" 
		    android:layout_width="33dip" 
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		/>
		<LinearLayout
				android:id="@+id/panelContent" 
			    android:orientation="vertical"
	    		android:layout_width="fill_parent"
	    		android:layout_height="fill_parent"
			>
				<TextView
				    android:layout_width="fill_parent" 
				    android:layout_height="wrap_content" 
				    android:gravity="center"
				    android:text="  周四    "
				    android:textSize="16dip"
				    android:padding="4dip"
				    android:textColor="#eee"
				    android:textStyle="bold"
				    android:background="#993333"
				/>
				<ListView 	android:id="@+id/list4" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:drawSelectorOnTop="false" 
					android:scrollbars="vertical"
					android:background="#FFFFFF"
				/>
				<TextView
				    android:layout_width="fill_parent" 
				    android:layout_height="fill_parent" 
				    android:gravity="center"
				    android:textSize="16dip"
				    android:padding="4dip"
				    android:textColor="#eee"
				    android:textStyle="bold"
				    android:background="#993333"
				/>
			</LinearLayout>
	</com.android.demo.widget.Panel>
	<com.android.demo.widget.Panel
	    android:layout_width="wrap_content" 
	    android:layout_height="fill_parent" 
	    android:id="@+id/rightPanel3"
	    android:layout_gravity="right"
	    panel:handle="@+id/panelHandle"
	    panel:content="@+id/panelContent"
	    panel:position="right"
	    panel:animationDuration="666"
	    panel:openedHandle="@drawable/right_switcher_expanded_background"
	    panel:closedHandle="@drawable/right_switcher_collapsed_background"
	    panel:weight="75%p"
	    panel:linearFlying="true"
	>
		<Button
			android:id="@+id/panelHandle" 
		    android:layout_width="33dip" 
		    android:layout_height="wrap_content"
		    android:layout_gravity="bottom"
		    android:layout_marginBottom="20dip"
		/>
		<LinearLayout
				android:id="@+id/panelContent" 
			    android:orientation="vertical"
	    		android:layout_width="fill_parent"
	    		android:layout_height="fill_parent"
			>
				<TextView
				    android:layout_width="fill_parent" 
				    android:layout_height="wrap_content" 
				    android:gravity="center"
				    android:text="  周五    "
				    android:textSize="16dip"
				    android:padding="4dip"
				    android:textColor="#eee"
				    android:textStyle="bold"
				    android:background="#993333"
				/>
				<ListView 	android:id="@+id/list5" 
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content" 
					android:drawSelectorOnTop="false" 
					android:scrollbars="vertical"
					android:background="#FFFFFF"
				/>
				<TextView
				    android:layout_width="fill_parent" 
				    android:layout_height="fill_parent" 
				    android:background="#993333"
				/>
			</LinearLayout>

	</com.android.demo.widget.Panel>
</FrameLayout>
